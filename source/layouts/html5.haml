%html.no-js{lang:"it",:"xmlns:fb" => "http://ogp.me/ns/fb#"}
  %head
    %meta{:charset => "utf-8"}

    %title
      = page_title

    = page_metas

    <!-- Favicons and touch icons -->
    <!-- For retina-display iPads -->
    %link{ :href=>"/apple-touch-icon-144x144-precomposed.png?v=1", :rel=>"apple-touch-icon-precomposed", :sizes=>"144x144", :type=>"image/png" }
    <!-- For retina-display iPhones -->
    %link{ :href=>"/apple-touch-icon-144x144-precomposed.png?v=1", :rel=>"apple-touch-icon-precomposed", :sizes=>"114x114", :type=>"image/png" }
    <!-- For iPad 1 -->
    %link{ :href=>"/apple-touch-icon-72x72-precomposed.png?v=1", :rel=>"apple-touch-icon-precomposed", :sizes=>"72x72", :type=>"image/png" }
    <!-- For iPhone 3G, iPod Touch and Android -->
    %link{ :href=>"/apple-touch-icon-57x57-precomposed.png?v=1", :rel=>"apple-touch-icon-precomposed", :type=>"image/png" }
    <!-- For Nokia -->
    %link{ :href=>"/apple-touch-icon-original.png?v=1", :rel=>"shortcut icon" }
    <!-- For everything else -->
    %link{ :href=>"/favicon.png?v=1", :rel=>"shortcut icon", :type=>"image/png" }
    %link{ :href=>"/favicon.ico?v=1", :rel=>"shortcut icon", :type=>"image/x-icon" }

    = javascript_include_tag "vendor/modernizr"
    = stylesheet_link_tag "application"
  %body
    = partial'partials/tag-manager'
    = yield

    %script{src: "//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-52ab343a2ff4bee8"}
    = javascript_include_tag "site.js"






